# Production Environment Variables Template
# Copy this to .env.production and fill in actual values

# --- Database ---
DB_PATH=app/data/als.db
DB_SCHEMA_PATH=app/data/schema.sql

# --- IBM watsonx ---
WATSONX_URL=https://eu-gb.ml.cloud.ibm.com
WATSONX_APIKEY=YOUR_ACTUAL_API_KEY_HERE  # NEVER commit actual key
SPACE_ID=YOUR_SPACE_ID_HERE
PROJECT_ID=YOUR_PROJECT_ID_HERE
ENABLE_SEMANTIC_BACKOFF=true

# --- Vector Indexes ---
BACKGROUND_VECTOR_INDEX_ID=YOUR_INDEX_ID_HERE
QUESTION_VECTOR_INDEX_ID=YOUR_INDEX_ID_HERE

# --- Search Configuration ---
BM25_ENABLED=true
BM25_BG_INDEX_DIR=app/data/bm25_bg
BM25_Q_INDEX_DIR=app/data/bm25_q

# --- API Configuration ---
# Change this to your actual domain in production
VITE_API_BASE=https://your-api-domain.com

# --- Security ---
# Set specific origins instead of "*"
CORS_ORIGINS=https://your-frontend-domain.com

# --- App Settings ---
DEBUG=false
BUILD_VERSION=1.0.0